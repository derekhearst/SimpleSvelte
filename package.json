{
	"name": "simplesvelte",
	"version": "1.1.26",
	"scripts": {
		"dev": "bun vite dev",
		"build": "bun vite build && bun run prepack",
		"preview": "bun vite preview",
		"prepare": "bun svelte-kit sync || echo ''",
		"prepack": "bun svelte-kit sync && bun svelte-package  && bun publint",
		"check": "bun svelte-kit sync && bun svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "bun svelte-kit sync && bun svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "bun prettier --write .",
		"lint": "bun prettier --check . && bun eslint ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"ag-grid-enterprise": "^33.3.2",
		"svelte": "^5.0.0",
		"sweetalert2": "^11.22.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.33.0",
		"@sveltejs/adapter-cloudflare": "^7.2.2",
		"@sveltejs/kit": "^2.36.1",
		"@sveltejs/package": "^2.5.0",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"@tailwindcss/cli": "^4.1.12",
		"@tailwindcss/vite": "^4.1.12",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"daisyui": "^5.0.50",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"publint": "^0.3.12",
		"svelte": "^5.38.2",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.12",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.40.0",
		"vite": "^6.3.5",
		"vitest": "^3.2.4"
	},
	"keywords": [
		"svelte"
	]
}
