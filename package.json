{
	"name": "simplesvelte",
	"version": "1.0.3",
	"scripts": {
		"dev": "bun vite dev",
		"build": "bun vite build && bun run prepack",
		"preview": "bun vite preview",
		"prepare": "bun svelte-kit sync || echo ''",
		"prepack": "bun svelte-kit sync && bun svelte-package && bun publint",
		"check": "bun svelte-kit sync && bun svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "bun svelte-kit sync && bun svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "bun prettier --write .",
		"lint": "bun prettier --check . && bun eslint ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.9",
		"@eslint/js": "^9.28.0",
		"@sveltejs/adapter-cloudflare": "^7.0.3",
		"@sveltejs/kit": "^2.21.2",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/vite": "^4.1.8",
		"daisyui": "^5.0.43",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.1",
		"globals": "^16.2.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.12",
		"publint": "^0.3.12",
		"svelte": "^5.33.14",
		"svelte-check": "^4.2.1",
		"tailwindcss": "^4.1.8",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.1",
		"vite": "^6.3.5"
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"ag-grid-enterprise": "^33.3.1",
		"dayjs": "^1.11.13",
		"sweetalert2": "^11.22.0"
	}
}
