{
	"name": "simplesvelte",
	"version": "1.1.14",
	"scripts": {
		"dev": "bun vite dev",
		"build": "bun vite build && bun run prepack",
		"preview": "bun vite preview",
		"prepare": "bun svelte-kit sync || echo ''",
		"prepack": "bun svelte-kit sync && bun svelte-package  && bun publint",
		"check": "bun svelte-kit sync && bun svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "bun svelte-kit sync && bun svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "bun prettier --write .",
		"lint": "bun prettier --check . && bun eslint ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0",
		"ag-grid-enterprise": "^33.3.2",
		"dayjs": "^1.11.13",
		"sweetalert2": "^11.22.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.0",
		"@eslint/js": "^9.29.0",
		"@sveltejs/adapter-cloudflare": "^7.0.4",
		"@sveltejs/kit": "^2.21.5",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/cli": "^4.1.10",
		"@tailwindcss/vite": "^4.1.10",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"daisyui": "^5.0.43",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.2",
		"globals": "^16.2.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.12",
		"publint": "^0.3.12",
		"svelte": "^5.34.3",
		"svelte-check": "^4.2.1",
		"tailwindcss": "^4.1.10",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.34.1",
		"vite": "^6.3.5",
		"vitest": "^3.2.3"
	},
	"keywords": [
		"svelte"
	]
}
